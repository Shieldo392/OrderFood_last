<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout
        android:id="@+id/rlBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2C029">

        <LinearLayout

            android:id="@+id/lnContent"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/tvWelcome"
                android:layout_gravity="center"
                android:textSize="@dimen/_25sdp"
                android:textStyle="bold"
                android:text="Quick search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/_20sdp"
                android:textSize="@dimen/_15sdp"
                android:layout_gravity="center"
                android:text="Set your location to start exploring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="restaurant around you"
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_above="@id/lnContent"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_centerHorizontal="true">
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vpgWelCome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>



        </RelativeLayout>
        <LinearLayout

            android:layout_marginTop="@dimen/_50sdp"
            android:layout_below="@id/lnContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </LinearLayout>

        <RelativeLayout
            android:layout_marginBottom="@dimen/_50sdp"
            android:id="@+id/btnSkip"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/radius">
            <TextView
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp"
                android:text="Skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/ic_next_forward"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/btnSkip"
            android:layout_centerHorizontal="true"
            android:id="@+id/pr_welcome"/>

    </RelativeLayout>

</layout>