<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:paddingRight="@dimen/_10sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvName"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/black"
                android:text="ABC"/>

        </RelativeLayout>
        <RelativeLayout
            android:paddingLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvGiaSP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500k"
                android:textColor="@color/red" />
            <LinearLayout

                android:background="@drawable/border_color_wel"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/welcome_background"
                    android:src="@drawable/ic_baseline_remove_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnMinus"/>
                <EditText
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="0"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="wrap_content"
                    android:background="@color/welcome_background"
                    android:id="@+id/edtSL"/>
                <ImageView
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_add_red"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnAdd"/>

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@drawable/ke_ngang"
            android:text=" "/>
    </LinearLayout>


</RelativeLayout>