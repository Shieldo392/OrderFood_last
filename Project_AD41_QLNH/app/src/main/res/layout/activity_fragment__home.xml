<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
   >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E9E9EB"
        android:orientation="vertical">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/welcome_background"
            android:orientation="horizontal">

            <ImageView
                android:layout_margin="@dimen/_3sdp"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/search_ic" />

            <TextView
                android:background="@drawable/border_radius"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:text=" " />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:layout_marginRight="@dimen/_50sdp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_radius"
                    android:backgroundTint="@color/welcome_background"
                    android:hint="Search somethings.."
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_15sdp" />

                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp">
                    <TextView
                        android:background="@drawable/border_radius"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:text=" " />
                    <RelativeLayout
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/btnShopping"
                            android:layout_centerInParent="true"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/shopping" />

                        <TextView
                            android:id="@+id/tvCount"
                            android:background="@drawable/border_radius"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="@dimen/_7sdp"
                            android:backgroundTint="#ff0000"
                            android:textColor="@color/white"
                            android:text="0"
                            android:gravity="center"/>

                    </RelativeLayout>


                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>



        <androidx.viewpager.widget.ViewPager
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:id="@+id/vpgImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_140sdp"></androidx.viewpager.widget.ViewPager>

        <LinearLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phổ biến"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/teal_200"
                    android:layout_alignParentRight="true"
                    android:text="See All"
                    android:layout_centerVertical="true"
                    android:id="@+id/tvSeeAll"/>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/rcSanPham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

<LinearLayout
    android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đồ uống"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />
            <TextView
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/teal_200"
                android:layout_alignParentRight="true"
                android:text="See All"
                android:layout_centerVertical="true"
                android:id="@+id/tvSeeAll_Drink"/>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/rcDrink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
</LinearLayout>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</layout>